{
  "name": "@test-runner/core",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "0.10.0",
  "description": "Minimal, extensible, isomorphic test runner.",
  "repository": "https://github.com/test-runner-js/core",
  "type": "module",
  "exports": {
    "import": "./index.js",
    "require": "./dist/index.cjs"
  },
  "license": "MIT",
  "keywords": [
    "test",
    "runner",
    "minimal",
    "simple",
    "easy",
    "tape",
    "tap",
    "ava",
    "mocha"
  ],
  "engines": {
    "node": ">=12.17"
  },
  "scripts": {
    "test": "npm run dist && npm run test:ci",
    "test:ci": "test-runner --view.hide-skips test/*.js",
    "dist": "rollup -c",
    "docs": "jsdoc2md index.js > docs/API.md && jsdoc2md lib/view.js > docs/view.md"
  },
  "dependencies": {
    "@test-runner/tom": "^0.8.0",
    "fsm-base": "^0.7.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.5",
    "isomorphic-assert": "^1.0.0",
    "jsdoc-to-markdown": "^7.0.1",
    "node-fetch": "^3.0.0",
    "rollup": "^2.58.0",
    "sleep-anywhere": "^2.1.0",
    "test-runner": "^0.9.8"
  },
  "standard": {
    "ignore": [
      "tmp",
      "dist"
    ]
  },
  "files": [
    "lib",
    "dist",
    "index.js"
  ]
}
